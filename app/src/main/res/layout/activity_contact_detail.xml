<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.contractdetail.ContactDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/appbar_contact_detail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_contact_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back_white"
                android:paddingHorizontal="16dp" />
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Label.M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_contract"
                android:layout_weight="1"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_contact_detail_complete"
                style="@style/Label.M"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/str_complete"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:gravity="center"/>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar_contact_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_contact_detail_avatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/sel_ic_avatar"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_contact_detail_name"
                        style="@style/Label.M"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        tools:text="주주주"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Label.M"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_send_type"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="20dp">
                    <LinearLayout
                        android:id="@+id/ll_sms_radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_sms_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sel_ic_radio"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_sms_radio"
                            style="@style/Label.M"
                            android:text="@string/str_send_sms"
                            android:textColor="@color/c_check"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_kakao_radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_kakao_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sel_ic_radio"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_kakao_radio"
                            style="@style/Label.M"
                            android:text="@string/str_send_sms"
                            android:textColor="@color/c_check"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Label.M"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_contents"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="20dp"/>
                <com.jdm.alija.view.TextArea
                    android:id="@+id/ta_contact_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:minHeight="180dp">
                </com.jdm.alija.view.TextArea>
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Label.M"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/str_attach_photo"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_contact_detail_attach_img"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_r8_s_gray200_f_white"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                </androidx.appcompat.widget.AppCompatImageView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_contact_detail_camera"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/bg_r8_f_gray100">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_contact_detail_camera"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_camera_gray300"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Label.S"
                        android:text="@string/str_add_image"
                        android:textColor="@color/gray_300"
                        app:layout_constraintTop_toBottomOf="@+id/iv_contact_detail_camera"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>